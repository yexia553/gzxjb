/* index.wxss */
.header {
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  color: var(--gray-800);
  padding: 20rpx 0;
}

.section {
  margin-bottom: 36rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: var(--gray-700);
}

.primary-btn {
  background: linear-gradient(
    135deg,
    var(--primary-color) 0%,
    var(--primary-color-dark) 100%
  );
  color: #ffffff;
  font-size: 32rpx;
  padding: 24rpx 0;
  border-radius: 16rpx;
  text-align: center;
  width: 100%;
  font-weight: 500;
  margin-top: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(64, 112, 255, 0.25);
}

.primary-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.tooltip-field {
  position: relative;
}

.mt-40 {
  margin-top: 40rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 24rpx;
}

.popup-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--gray-600);
  margin-bottom: 32rpx;
}

.popup-footer {
  display: flex;
  justify-content: center;
}

.popup-btn {
  background-color: var(--primary-color);
  color: white;
  font-size: 28rpx;
  padding: 16rpx 48rpx;
  border-radius: 12rpx;
}

/* 自定义 Vant 组件样式 */
.van-field {
  padding: 20rpx 0 !important;
  margin: 0 !important;
}

.van-field__label {
  color: var(--gray-700) !important;
  font-size: 28rpx !important;
  font-weight: 500 !important;
}

.van-field__input {
  color: var(--gray-800) !important;
  font-size: 30rpx !important;
}

.van-cell {
  padding: 24rpx 24rpx !important;
  border-radius: 16rpx !important;
  margin-bottom: 16rpx !important;
  box-shadow: var(--shadow-sm) !important;
  background-color: white !important;
}

.van-cell-group {
  background-color: transparent !important;
  border: none !important;
}
