/* index.wxss */
:root {
  --primary-gradient: linear-gradient(135deg, #4776E6 0%, #8E54E9 100%);
  --primary-color: #5e72e4;
  --primary-color-dark: #4454c3;
  --secondary-color: #11cdef;
  --success-color: #2dce89;
  --info-color: #6772e5;
  --warning-color: #fb6340;
  --danger-color: #f5365c;
  --gray-100: #f8f9fa;
  --gray-200: #e9ecef;
  --gray-300: #dee2e6;
  --gray-400: #ced4da;
  --gray-500: #adb5bd;
  --gray-600: #6c757d;
  --gray-700: #495057;
  --gray-800: #343a40;
  --gray-900: #212529;
  --shadow-sm: 0 2rpx 6rpx rgba(50, 50, 93, 0.12);
  --shadow-md: 0 4rpx 12rpx rgba(50, 50, 93, 0.15);
  --shadow-lg: 0 12rpx 32rpx rgba(50, 50, 93, 0.2);
  --card-border-radius: 24rpx;
  --btn-border-radius: 16rpx;
}

page {
  background: linear-gradient(150deg, #f6f9fc 0%, #eef1f5 100%);
  min-height: 100vh;
  padding: 0;
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 30rpx;
}

.header {
  margin-bottom: 40rpx;
  padding: 20rpx 0;
  animation: fadeIn 0.8s ease-in-out;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  text-align: center;
  color: var(--gray-800);
  padding: 20rpx 0;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: var(--primary-gradient);
  border-radius: 3rpx;
}

.subtitle {
  font-size: 28rpx;
  text-align: center;
  color: var(--gray-600);
  margin-top: 10rpx;
}

.card {
  background-color: white;
  border-radius: var(--card-border-radius);
  box-shadow: var(--shadow-md);
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden;
  animation: slideUp 0.7s ease-out;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: var(--primary-gradient);
}

.card-body {
  position: relative;
  z-index: 1;
}

.section {
  margin-bottom: 36rpx;
  animation: fadeIn 0.5s ease-in-out;
}

.section-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: var(--primary-color);
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: var(--primary-gradient);
  border-radius: 4rpx;
}

.btn-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.option-btn {
  flex: 1 0 calc(50% - 20rpx);
  min-width: calc(50% - 20rpx);
  background-color: var(--gray-100);
  color: var(--gray-700);
  font-size: 26rpx;
  padding: 20rpx 16rpx;
  border-radius: var(--btn-border-radius);
  text-align: center;
  font-weight: 500;
  box-shadow: var(--shadow-sm);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.option-icon {
  display: inline-block;
  margin-right: 8rpx;
  font-size: 24rpx;
  vertical-align: middle;
}

.option-text {
  display: inline-block;
  vertical-align: middle;
  color: inherit;
}

.option-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
  opacity: 0;
  transition: opacity 0.2s ease;
}

.option-btn:active {
  transform: scale(0.98);
}

.option-btn:active::after {
  opacity: 1;
}

.option-btn.active {
  background-color: #5e72e4;
  color: #ffffff;
  box-shadow: var(--shadow-md);
  position: relative;
  z-index: 1;
}

.option-btn.active .option-text,
.option-btn.active .option-icon {
  color: #ffffff;
}

.divider {
  height: 2rpx;
  background-color: var(--gray-200);
  margin: 30rpx 0;
  position: relative;
}

.divider-text {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: white;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: var(--gray-500);
  white-space: nowrap;
}

.divider::before {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 16rpx;
  height: 16rpx;
  background: var(--primary-gradient);
  border-radius: 50%;
}

.primary-btn {
  background: #5e72e4;
  color: #ffffff;
  font-size: 32rpx;
  padding: 24rpx 0;
  border-radius: var(--btn-border-radius);
  text-align: center;
  width: 100%;
  font-weight: 600;
  margin-top: 48rpx;
  box-shadow: 0 8rpx 16rpx rgba(94, 114, 228, 0.3);
  position: relative;
  overflow: hidden;
  border: none;
}

.btn-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
  vertical-align: middle;
}

.button-text {
  color: #ffffff;
  display: inline-block;
  vertical-align: middle;
}

.primary-btn .option-text,
.primary-btn .btn-icon,
.primary-btn .button-text {
  color: #ffffff;
  vertical-align: middle;
  display: inline-block;
}

.tooltip-field {
  position: relative;
}

.mt-40 {
  margin-top: 40rpx;
}

.popup-title {
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 24rpx;
  color: var(--primary-color);
}

.popup-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--gray-600);
  margin-bottom: 32rpx;
}

.popup-footer {
  display: flex;
  justify-content: center;
}

.popup-btn {
  background: var(--primary-gradient);
  color: white;
  font-size: 28rpx;
  padding: 16rpx 48rpx;
  border-radius: var(--btn-border-radius);
  box-shadow: var(--shadow-sm);
}

.footer {
  text-align: center;
  font-size: 24rpx;
  color: var(--gray-500);
  padding: 30rpx 0;
  margin-top: 10rpx;
}

/* 自定义 Vant 组件样式 */
.van-field {
  padding: 20rpx 0 !important;
  margin: 0 !important;
}

.van-field__label {
  color: var(--gray-700) !important;
  font-size: 28rpx !important;
  font-weight: 500 !important;
}

.van-field__input {
  color: var(--gray-800) !important;
  font-size: 30rpx !important;
}

.van-cell {
  padding: 28rpx 24rpx !important;
  border-radius: 16rpx !important;
  margin-bottom: 16rpx !important;
  box-shadow: var(--shadow-sm) !important;
  background-color: white !important;
  border-left: 4rpx solid var(--primary-color) !important;
}

.van-cell-group {
  background-color: transparent !important;
  border: none !important;
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(20rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.fadeIn {
  animation: fadeIn 0.8s ease-in-out;
}
