/* 环境选项按钮样式 */
.btn-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.option-btn {
  flex: 1 1 45%;
  min-width: 300rpx;
  background-color: #f5f5f5;
  color: var(--gray-700);
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.option-btn.active {
  background-color: var(--primary-color);
  color: white;
}

.option-sub-text {
  font-size: 24rpx;
  margin-top: 8rpx;
  opacity: 0.8;
}
