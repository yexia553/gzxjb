/* result.wxss */
.page-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 36rpx;
  color: var(--gray-800);
  padding: 20rpx 0;
}

.result-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 32rpx;
  box-shadow: var(--shadow);
}

.result-header {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
}

.value-assessment {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  padding: 12rpx 32rpx;
  border-radius: 12rpx;
  text-align: center;
}

.result-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.result-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
}

.result-label {
  font-size: 28rpx;
  color: var(--gray-600);
  margin-bottom: 12rpx;
}

.result-value {
  font-size: 52rpx;
  font-weight: 700;
  color: var(--primary-color);
  line-height: 1.2;
}

.factors-section {
  margin-top: 28rpx;
}

.factors-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-700);
  margin-bottom: 20rpx;
  text-align: center;
}

.factors-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.factor-item {
  width: 46%;
  margin-bottom: 20rpx;
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius: 16rpx;
  background-color: #f9fafc;
  box-shadow: var(--shadow-sm);
}

.factor-label {
  font-size: 26rpx;
  color: var(--gray-600);
  margin-bottom: 8rpx;
}

.factor-value {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.result-detail {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-bottom: 16rpx;
}

.detail-title {
  font-size: 28rpx;
  color: var(--gray-700);
  margin-right: 16rpx;
}

.detail-value {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-800);
  margin-right: 12rpx;
}

.detail-desc {
  font-size: 24rpx;
  color: var(--gray-500);
}

.funMetrics-card {
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-700);
  text-align: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid var(--gray-100);
}

.funMetrics-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 28rpx;
}

.funMetrics-item {
  text-align: center;
}

.funMetrics-icon-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f5f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.funMetrics-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 0;
}

.funMetrics-value {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.funMetrics-label {
  font-size: 24rpx;
  color: var(--gray-600);
  line-height: 1.3;
  padding: 0 10rpx;
}

.funMetrics-desc {
  font-size: 26rpx;
  color: var(--gray-600);
  text-align: center;
  padding-top: 16rpx;
  border-top: 1px dashed var(--gray-200);
}

/* 旅行指标特殊样式 */
.travel-item .funMetrics-value {
  color: #ff7043;
  font-weight: bold;
}

.travel-item .funMetrics-label {
  font-size: 22rpx;
  line-height: 1.2;
}

.actions-container {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 16rpx 40rpx 28rpx;
  background-color: white;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
  justify-content: center;
  box-sizing: border-box;
}

.primary-btn, .share-btn {
  flex: 0 0 auto;
  width: 240rpx;
  height: 70rpx;
  font-size: 26rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.primary-btn {
  margin-right: 24rpx;
}

.share-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-color-dark) 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(64, 112, 255, 0.2);
}

.share-btn-text {
  margin-left: 8rpx;
  line-height: normal;
}

.share-tips {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 24rpx 40rpx;
  border-radius: 16rpx;
  text-align: center;
  z-index: 1000;
}

.share-tips-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.share-tips-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 修改紧凑型隐私保护样式 */
.privacy-compact-card {
  background: #f8f9fb;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  margin: -10rpx 24rpx 100rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.privacy-compact-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.privacy-compact-title {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--gray-700);
}

.privacy-compact-subtitle {
  font-size: 20rpx;
  color: var(--gray-500);
}

.privacy-compact-options {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.privacy-compact-item {
  display: flex;
  align-items: center;
  padding: 4rpx 0;
}

.privacy-compact-item text {
  font-size: 22rpx;
  color: var(--gray-600);
  margin-right: 8rpx;
}

/* 减小开关大小 */
.privacy-compact-item switch {
  transform: scale(0.7);
  margin-right: -10rpx;
}

/* 去除原来的隐私卡片样式 */
.privacy-card {
  display: none;
}

/* 调整快乐指数描述 */
.compact-desc {
  padding-top: 10rpx;
  padding-bottom: 6rpx;
  font-size: 24rpx;
}

.privacy-mask {
  color: #f56c6c;
  font-size: 32rpx;
  font-weight: bold;
}

.privacy-mask-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 200rpx;
  text-align: center;
  background: rgba(245, 108, 108, 0.1);
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 16rpx;
}
